{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/js/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ]
        }
    },
    "include": [
        "src/js/**/*",
        "src/styles/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
